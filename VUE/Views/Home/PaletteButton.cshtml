
@{
    ViewBag.Title = "PaletteButton";
}

 <div id="app">
    <mt-header fixed title="MessageBox">
        <a href="@Url.Action("Index","Home")" slot="left">
            <mt-button icon="back">返回</mt-button>
        </a>
    </mt-header>
    <div style="text-align: center; padding-top: 440px;">
        <mt-palette-button content="+" v-on:expand="main_log('expand')" v-on:expanded="main_log('expanded')" v-on:collapse="main_log('collapse')"
                           direction="lt" class="pb" ref="target_1" mainbuttonstyle="color:#fff;background-color:#26a2ff;"
                           style="left:30px;">
            <div class="my-icon-button indexicon icon-popup" v-on:touchstart="sub_log(1)">1</div>
            <div class="my-icon-button indexicon icon-popup" v-on:touchstart="sub_log(2)">2</div>
            <div class="my-icon-button indexicon icon-popup" v-on:touchstart="sub_log(3)">3</div>
        </mt-palette-button> 
    </div>
   
</div>
@section scripts{
    <script>

        new Vue({
            el: '#app',
            methods: {
                main_log: function (val) {
                    console.log('main_log', val);
                },
                sub_log: function (val) {
                    console.log('sub_log', val);
                    this.$refs.target_1.collapse();
                }
            }

        })
    </script>
}
